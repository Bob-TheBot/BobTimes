# Development Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/bobtimes_dev

# LLM Configuration - Two instances: slow (high quality) and fast (quick responses)

# Slow LLM - High quality, more expensive models
LLM_SLOW_PROVIDER=anthropic
LLM_SLOW_MODEL=claude-opus-4-1-20250805
LLM_SLOW_MAX_TOKENS=4096
LLM_SLOW_TEMPERATURE=0.3

# Fast LLM - Quick responses, cost-effective models
LLM_FAST_PROVIDER=openai
LLM_FAST_MODEL=gpt-5-mini
LLM_FAST_MAX_TOKENS=2048
LLM_FAST_TEMPERATURE=0.7

# Application Configuration
DEBUG=true
LOG_LEVEL=DEBUG
ENVIRONMENT=development
