# Development environment configuration
# NO SECRETS SHOULD BE STORED HERE - Use libs/common/secrets.yaml for sensitive information

# Application settings
APP_ENV=development
DEBUG=True
LOG_LEVEL=info
ALLOWED_HOSTS=localhost,127.0.0.1

# API settings
API_PREFIX=/api/v1
PROJECT_NAME=Bob Times

# Server settings
HOST=0.0.0.0
PORT=9200

# CORS settings
# Including common development ports for devcontainer and local development
CORS_ORIGINS=http://localhost:51273,http://localhost:3000,http://127.0.0.1:51273,http://127.0.0.1:3000

LOG_LEVEL=INFO
LOG_JSON_FORMAT=False
LOG_CONSOLE_OUTPUT=True
LOG_FILE_OUTPUT=True
LOG_FILE_PATH=logs/app.log
LOG_ROTATION=20 MB
LOG_RETENTION=1 week
LOG_COMPRESSION=zip


LLM_PROVIDER=aws_bedrock
IMAGE_GEN_PROVIDER=openai

# YouTube Integration Settings
YOUTUBE_ENABLED=true
YOUTUBE_MAX_VIDEOS_PER_CHANNEL=5
YOUTUBE_TRANSCRIPTION_ENABLED=true
YOUTUBE_CACHE_DURATION_HOURS=6  # How long to cache video/channel data before refreshing
YOUTUBE_CACHE_ENABLED=true
YOUTUBE_CACHE_MAX_VIDEOS=100    # Maximum number of videos to cache per field
YOUTUBE_CONCURRENT_REQUESTS=3   # Max concurrent API requests
YOUTUBE_REQUEST_DELAY_MS=100    # Delay between requests to avoid rate limiting

